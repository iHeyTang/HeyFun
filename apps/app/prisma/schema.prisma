model SystemVoices {
  id              String   @id @default(cuid())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  // 基本信息
  name            String
  description     String?
  // 提供商信息
  provider        String // 提供商标识
  model           String? // 使用的模型
